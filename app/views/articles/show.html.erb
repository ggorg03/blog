<h3 class="d-flex justify-content-center"><%= @article.title %></h3>

<div class="row justify-content-center">
    <div class="col-sm-8">
        <div class="card text-center shadow mb-5 bg-white rounded">
            <div class="card-header font-italic">
                by <%= @article.user.username %>
            </div>
            <div class="card-body">
                <div class="card-text"><%= simple_format(@article.description) %></div>
                <%= link_to "Edit", edit_article_path(@article), class: "btn btn-outline-info" %>
                <%= link_to "Delete", article_path(@article), class: "btn btn-outline-danger",
                      :method => :delete,
                      :data => { confirm: 'Are you sure?' }
                %>
            </div>
            <div class="card-footer text-muted">
                <%= created_edited_time_ago_in_words(@article) %>
            </div>
        </div>
    </div>
</div>