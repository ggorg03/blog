<h1>Listing all articles</h1>
<p>
  <%= link_to "+ Create new article", new_article_path, class: "btn btn-success" %>
</p>

<div class="row justify-content-center">
  <div class="col-8">
    <% @articles.each do |article| %>
      <div class="card text-center shadow mb-5 bg-white rounded">
        <div class="card-header font-italic">
          by Gustavo Gorg√¥nio
        </div>
        <div class="card-body">
          <h5 class="card-title text-success"><%= article.title %></h5>
          <p class="card-text"><%= article.description.truncate(50) %></p>
          <%= link_to "View", article_path(article), class: "btn btn-outline-success" %>
          <%= link_to "Edit", edit_article_path(article), class: "btn btn-outline-info" %>
          <%= link_to "Delete", article_path(article), class: "btn btn-outline-danger", method: :delete %>
        </div>
        <div class="card-footer text-muted">
          <%= created_edited_time_ago_in_words(article) %>
        </div>
      </div>
    <% end %>
  </div>
</div>