<div class="row justify-content-center">
    <div class="col-md-10">
        <%= render 'shared/errors_msgs' %>

        <%= form_with model: @user, class: "shadow p-5 mb-5 bg-dark rounded", local: true do |f| %>
            <div class="form-group row">
                <%= f.label :username, class: "col-md-2 col-form-label font-weight-bold text-light" %>
                <div class="col-md-10">
                    <%= f.text_field :username, class: "form-control", placeholder:"Create an username" %>
                </div>
            </div>
            <div class="form-group row">
                <%= f.label :email, class: "col-md-2 col-form-label font-weight-bold text-light" %>
                <div class="col-md-10">
                    <%= f.email_field :email, class: "form-control", placeholder:"Enter your email address" %>
                </div>
            </div>
            <div class="form-group row">
                <%= f.label :password, class: "col-md-2 col-form-label font-weight-bold text-light" %>
                <div class="col-md-10">
                    <%= f.password_field :password, class: "form-control", placeholder:"Create a password" %>
                </div>
            </div>
            <div class="form-group row justify-content-end">
                <%= f.submit "Sign up!", class:"btn btn-outline-light btn-lg mr-3" %>
                <%= link_to "Cancel", root_path, class:"btn btn-outline-light btn-lg" %>
            </div>
        <% end %>
    </div>
</div>