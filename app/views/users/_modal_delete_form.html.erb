<% if logged_in? %>
<!-- Modal -->
    <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">Delete Profile</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <%= form_with scope: :confirmation, url: user_path(current_user), id:'form_delete-user' ,:method => :delete, local: true do |f| %>
                        <div class="form-group row">
                            <%= f.label :password, class: "col-md-2 col-form-label font-weight-bold" %>
                            <div class="col-md-10">
                                <%= f.password_field :password, class: "form-control", placeholder:"Enter your password" %>
                            </div>
                        </div>
                    <% end %>
                </div>
                <div class="modal-footer">
                    <%= button_tag "Cancel" ,class:"btn btn-outline-dark", :data => {dismiss: "modal"} %>
                    <%= button_tag "Delete", class: "btn btn-outline-dark mr-3",
                                            form: "form_delete-user",
                                            :data => { confirm: 'Are you sure?' }
                    %>
                </div>
            </div>
        </div>
    </div>
<% end %>