<div class="row justify-content-center">
    <div class="col-md-10">
        <%= render 'shared/errors_msgs' %>

        <%= form_with scope: :session, url: login_path, class: "shadow p-5 mb-5 bg-dark rounded", local: true do |f| %>
            <div class="form-group row">
                <%= f.label :email, class: "col-md-2 col-form-label font-weight-bold text-light" %>
                <div class="col-md-10">
                    <%= f.email_field :email, class: "form-control", placeholder:"Enter your email address" %>
                </div>
            </div>
            <div class="form-group row">
                <%= f.label :password, class: "col-md-2 col-form-label font-weight-bold text-light" %>
                <div class="col-md-10">
                    <%= f.password_field :password, class: "form-control", placeholder:"Create a password" %>
                </div>
            </div>
            <div class="form-group row justify-content-end">
                <%= f.submit 'Log in', class:"btn btn-outline-light btn-lg col-sm-2 mb-2" %>
                <%= link_to "Cancel", root_path, class:"btn btn-outline-light btn-lg col-sm-2 mb-2" %>
                <div class="w-100"></div>
                <%= link_to "Sign Up!", signup_path, class:"btn btn-outline-light btn-lg col-sm-3" %>
            </div>
        <% end %>
    </div>
</div>