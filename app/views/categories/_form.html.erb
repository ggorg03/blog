<div class="row justify-content-center">
    <div class="col-md-10">
        <%= render 'shared/errors_msgs' %>

        <%= form_with model: @category, class: "shadow p-5 mb-5 bg-dark rounded", local: true do |f| %>
            <div class="form-group row">
                <%= f.label :name, 'Category name', class: "col-md-2 col-form-label font-weight-bold text-light" %>
                <div class="col-md-10">
                    <%= f.text_field :name, class: "form-control", placeholder:"New category name" %>
                </div>
            </div>
            <div class="form-group row justify-content-end">
                <%= f.submit class:"btn btn-outline-light btn-lg mr-3" %>
                <%= link_to "Cancel", root_path, class:"btn btn-outline-light btn-lg" %>
            </div>
        <% end %>
    </div>
</div>