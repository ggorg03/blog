<div class="row justify-content-center">
  <div class="col-sm-4">
    <% @categories.each do |category| %>
      <div class="card text-center shadow mb-5 bg-white rounded">
        <div class="card-body">
          <h5 class="card-title text-success"><%= link_to category.name, category %></h5>
        </div>
        <div class="card-footer text-muted">
          <%= created_edited_time_ago_in_words(category) %>
        </div>
      </div>
    <% end %>
  </div>
</div>